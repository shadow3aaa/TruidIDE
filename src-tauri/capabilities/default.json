{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    "file-picker:default",
    "dialog:allow-open",
    "dialog:default",
    "fs:default",
    "fs:allow-read",
    "fs:allow-write",
    "os:default",
    "safe-area-insets-css:default",
    "safe-area-insets-css:allow-get-top-inset",
    "safe-area-insets-css:allow-get-bottom-inset",
    {
      "identifier": "fs:scope",
      "allow": [
        "$CACHE/**"
      ]
    }
  ]
}
